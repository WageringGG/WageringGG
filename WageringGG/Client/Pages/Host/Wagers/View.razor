@page "/host/wagers/view/{id:int}"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@inject AuthHttp http
@inject ISessionStorageService sessionStorage

<ErrorDisplay @bind-Errors="Errors" />
<h1 class="text-center">@Enum.GetName(typeof(Status), Wager.Status) Wager</h1>
<div class="my-2">
    @if (Wager.Status == (byte)Status.Confirmed)
    {
        <button class="btn btn-outline-danger ml-auto" @onclick="Close">Close</button>
    }
    else if (Wager.Status == (byte)Status.Closed)
    {
        <button class="btn btn-outline-success ml-auto" @onclick="Open">Open</button>
    }
</div>
<div class="row">
    <div class="col-12 col-lg-8 mx-auto">
        <h3>Hosts:</h3>
        <WagerHostsDisplay Hosts="Wager.Hosts" WagerId="Wager.Id" ChangeCallback="SetStatus" />
    </div>
    <div class="col-12 col-lg-8 mx-auto">
        <h3>Wager:</h3>
        <WagerDisplay Wager="Wager" />
    </div>
    @if (Wager.Status == (byte)Status.Confirmed)
    {
        <div class="col-12 col-lg-8 mx-auto">
            <h3>Challenges:</h3>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }
    [CascadingParameter]
    public HubConnection HubConnection { get; set; }
    public Wager Wager { get; set; } = new Wager();
    public IEnumerable<string> Errors { get; set; } = new List<string>();

    protected override async Task OnParametersSetAsync()
    {
        sessionStorage.Changed += SessionStorageChanged;
        var response = await http.Client.GetAsync($"/api/host/wager/{Id}");
        if (response.IsSuccessStatusCode)
            Wager = await response.Content.ReadFromJsonAsync<Wager>();
        else
            Errors = await response.Content.ReadFromJsonAsync<IEnumerable<string>>();
        await base.OnParametersSetAsync();
    }

    private async Task Open()
    {
        var response = await http.Client.PutAsJsonAsync($"/api/wager/status/{Wager.Id}", (byte)Status.Ongoing);
        if (response.IsSuccessStatusCode)
            await HubConnection.SendAsync("SetWagerStatus", Wager.GroupName, Wager.Id, (byte)Status.Ongoing);
        else
            Errors = await response.Content.ReadFromJsonAsync<IEnumerable<string>>();
    }

    private async Task Close()
    {
        var response = await http.Client.PutAsJsonAsync($"/api/wager/status/{Wager.Id}", (byte)Status.Closed);
        if (response.IsSuccessStatusCode)
            await HubConnection.SendAsync("SetWagerStatus", Wager.GroupName, Wager.Id, (byte)Status.Closed);
        else
            Errors = await response.Content.ReadFromJsonAsync<IEnumerable<string>>();
    }

    private void SessionStorageChanged(object sender, Blazored.SessionStorage.ChangedEventArgs e)
    {
        if (e.Key == "WagerStatus")
        {
            var data = ((int, byte))e.NewValue;
            if (Wager.Id == data.Item1)
            {
                Wager.Status = data.Item2;
                StateHasChanged();
            }
        }
        else if (e.Key == "WagerHostBid")
        {
            var data = (WagerHostBid)e.NewValue;
            if (Wager.Id == data.WagerId)
            {
                var host = Wager.Hosts.FirstOrDefault(x => x.Id == data.Id);
                if (host != null)
                {
                    host = data;
                    StateHasChanged();
                }
            }
        }
    }

    private async Task SendWagerHostBid(WagerHostBid bid)
    {
        PersonalNotification notification = new PersonalNotification
        {
            Date = DateTime.Now,
        };
        await HubConnection.InvokeAsync("SendWagerHostBid", Wager.GroupName, Wager.Status, bid, notification);
    }

    private void SetStatus(Status status)
    {
        Wager.Status = (byte)status;
    }
}
