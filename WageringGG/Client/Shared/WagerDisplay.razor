@using Humanizer

<div class="card border-primary">
    <div class="card-body">
        <h4 class="card-title">@Wager.Description</h4>
        <div class="row">
            <div class="col-6 text-center">
                Minimum: @NumDisplay(Wager.MinimumWager)
            </div>
            <div class="col-6 text-center">
                Maximum: @NumDisplay(Wager.MaximumWager)
            </div>
        </div>
        <div class="d-flex justify-content-between mt-2">
            <a class="btn btn-outline-secondary" href="/wagers/view/@Wager.Id">View</a>
            <small class="mt-auto">
                @(Wager.Date.Humanize(true, DateTime.Now))
            </small>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Wager Wager { get; set; }

    private string NumDisplay(decimal? num)
    {
        return num.HasValue ? num.ToString() : "-";
    }
}
