<div class="card border-primary">
    <h4 class="card-header">
        @Wager.Title
    </h4>
    <div class="card-body">
        <div class="card-text">
            @Wager.Description
        </div>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item d-flex justify-content-between align-items-center">Amount <span class="badge badge-secondary">@Wager.Amount.ToString("G29") XLM</span></li>
        <li class="list-group-item d-flex justify-content-between align-items-center">Hosts <span class="badge badge-secondary">@Wager.PlayerCount</span></li>
        <li class="list-group-item d-flex justify-content-between align-items-center">Challenges <span class="badge badge-secondary">@Wager.ChallengeCount</span></li>
    </ul>
    <div class="d-flex card-footer bg-transparent">
        @if (Link != null)
        {
            <a class="btn btn-secondary" href="@Link">View</a>
        }
        <TimeAgo Date="Wager.Date" Class="text-muted ml-auto mt-auto" />
    </div>
</div>

@code {
    [Parameter]
    public string Link { get; set; }
    [Parameter]
    public Wager Wager { get; set; }
}
