<div class="card border-primary">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-borderless text-center">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Payable (%)</th>
                        <th scope="col">Receivable (%)</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (WagerBid bid in Bids)
                    {
                        <tr>
                            <td>
                                <a class="btn btn-outline-secondary btn-sm" href="@($"/user/{bid.Profile.DisplayName}")" title="View profile">@bid.Profile.DisplayName</a>
                            </td>
                            <td>@bid.PayablePt%</td>
                            <td>@bid.ReceivablePt%</td>
                            <td>
                                @if (bid.Approved.HasValue)
                                {
                                    @if (bid.Approved.Value == false)
                                    {
                                        <button class="btn btn-outline-danger btn-sm disabled" title="@($"{bid.Profile.DisplayName} declined the wager.")"><i class="mdi mdi-cancel"></i></button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-success btn-sm disabled" title="@($"{bid.Profile.DisplayName} accepted the wager.")"><i class="mdi mdi-check"></i></button>
                                    }
                                }
                                else
                                {
                                    <small class="text-muted">Pending...</small>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @ChildContent
        </div>
    </div>
</div>

@code {
    [Parameter]
    public IEnumerable<WagerBid> Bids { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
